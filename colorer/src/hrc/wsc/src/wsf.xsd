]]></xs:documentation></xs:annotation>

<!-- 
<xs:complexType name="scriptType"> - rejected 

hrc for wsc:script was defined in custom.xml 
    and we don't need code dublication
    
wfc:script has no @id, but it is not very critical...
-->

<!--
<xs:complexType name="objectType"> - moved to wsc.xsd
-->

<xs:complexType name="unnamed">
    <xs:attribute name="name" type="xs:token" use="required"/>
    <xs:attribute name="helpstring" type="xs:string" use="required"/>
    <!-- TODO: named/@many is valid or not? -->
    <xs:attribute name="many" type="xs:boolean" use="optional"/> 
    <xs:attribute name="required" type="xs:boolean" use="optional"/>
</xs:complexType>


<xs:complexType name="named">
    <xs:complexContent>
        <xs:extension base="unnamed">
            <xs:attribute name="type">
                <xs:simpleType>
                <xs:restriction base="xs:string">
                    <xs:enumeration value="string"/>
                    <xs:enumeration value="boolean"/>
                    <xs:enumeration value="simple"/>
                </xs:restriction>
                </xs:simpleType>
            </xs:attribute>
        </xs:extension>
    </xs:complexContent>
</xs:complexType>


<xs:element name="runtime">
    <xs:complexType>
        <xs:sequence minOccurs="0" maxOccurs="unbounded">
            <xs:element name="named" type="named" minOccurs="0"/>
            <xs:element name="unnamed" type="unnamed" minOccurs="0"/>
            <xs:element name="description" type="xs:string" minOccurs="0"/>
            <xs:element name="example" type="xs:string" minOccurs="0"/>
            <xs:element name="usage" type="xs:string" minOccurs="0"/>
        </xs:sequence>
    </xs:complexType>
</xs:element>


<xs:element name="job">
    <xs:complexType>
        <xs:attribute name="id" type="xs:ID" use="required"/>
        <xs:sequence maxOccurs="unbounded">
            <xs:element ref="runtime" minOccurs="0"/>
            <xs:element ref="wsc:script" minOccurs="0"/>
            <xs:element name="object" type="wsc:objectType" minOccurs="0"/>
            <xs:element ref="wsc:reference" minOccurs="0"/>
            <xs:element ref="wsc:resource" minOccurs="0"/>
        </xs:sequence>
    </xs:complexType>
</xs:element>


<xs:element name="package">
    <xs:complexType>
        <xs:sequence>
            <xs:element ref="job" minOccurs="0" maxOccurs="unbounded"/>
        </xs:sequence>
    </xs:complexType>
</xs:element>

</xs:schema>